<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
  caption="msg://editorCaption"
  focusComponent="fieldGroup"
  messagesPack="com.haulmont.sample.petclinic.web.visit.visit">
  <data>
    <instance id="visitCt"
      class="com.haulmont.sample.petclinic.entity.visit.Visit"
      view="visit-with-room-and-pet-and-owner">
      <loader/>
    </instance>

    <collection id="petsCt" class="com.haulmont.sample.petclinic.entity.pet.Pet" view="pet-with-owner-and-type">
      <loader>
        <query>
          select e from petclinic_Pet e
        </query>
      </loader>
    </collection>

    <collection id="roomsCt" class="com.haulmont.sample.petclinic.entity.clinic.Room" view="_base">
      <loader>
        <query>
          select e from petclinic_Room e
        </query>
      </loader>
    </collection>
  </data>

  <dialogMode height="600"
    width="800"/>

    <layout expand="editActions" spacing="true">
        <form id="fieldGroup" dataContainer="visitCt">
            <column width="250px">
                <dateField property="visitDate"/>
                <textField colspan="5" property="description"/>
                <lookupPickerField property="pet" optionsContainer="petsCt"/>
                <lookupField property="status" />
            </column>
            <column width="250px">
                <lookupPickerField property="room" optionsContainer="roomsCt"/>
                <textField id="roomKeycodeTextField" property="roomKeycode" editable="false" />
            </column>
        </form>


        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
